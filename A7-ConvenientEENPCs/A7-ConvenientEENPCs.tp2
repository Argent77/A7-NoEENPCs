  REQUIRE_PREDICATE ((MOD_IS_INSTALLED ~A7-ConvenientEENPCs.tp2~ 1) OR
                     (MOD_IS_INSTALLED ~A7-ConvenientEENPCs.tp2~ 101) OR
                     (MOD_IS_INSTALLED ~A7-ConvenientEENPCs.tp2~ 102) OR
                     (MOD_IS_INSTALLED ~A7-ConvenientEENPCs.tp2~ 103) OR
                     (MOD_IS_INSTALLED ~A7-ConvenientEENPCs.tp2~ 104) OR
                     (MOD_IS_INSTALLED ~A7-ConvenientEENPCs.tp2~ 105)) @1005   // This component is only available if one or more NPCs have been disabled.
  REQUIRE_PREDICATE (NOT ((MOD_IS_INSTALLED ~EE_content_tweaks.tp2~ 0) OR
                          (MOD_IS_INSTALLED ~EE_content_tweaks.tp2~ 1)))  @1006   // This mod is not compatible with Pecca's EE_content_tweaks.
  GROUP @50 // Appearance
  DESIGNATED 301
  LABEL ~A7-CONVENIENTEENPCS-APPEARANCE-NPC_ITEMS_FOR_ALL~

  INCLUDE ~%MOD_FOLDER%/lib/npc_functions.tph~

  ACTION_IF ((MOD_IS_INSTALLED ~A7-ConvenientEENPCs.tp2~ 1) OR (MOD_IS_INSTALLED ~A7-ConvenientEENPCs.tp2~ 101)) BEGIN  // "Disable Baeloth"
    LAF A7ItemsBaeloth END
  END
  ACTION_IF ((MOD_IS_INSTALLED ~A7-ConvenientEENPCs.tp2~ 1) OR (MOD_IS_INSTALLED ~A7-ConvenientEENPCs.tp2~ 102)) BEGIN  // "Disable Dorn"
    LAF A7ItemsDorn END
  END
  ACTION_IF ((MOD_IS_INSTALLED ~A7-ConvenientEENPCs.tp2~ 1) OR (MOD_IS_INSTALLED ~A7-ConvenientEENPCs.tp2~ 103)) BEGIN  // "Disable Hexxat"
    LAF A7ItemsHexxat END
  END
  ACTION_IF ((MOD_IS_INSTALLED ~A7-ConvenientEENPCs.tp2~ 1) OR (MOD_IS_INSTALLED ~A7-ConvenientEENPCs.tp2~ 104)) BEGIN  // "Disable Neera"
    LAF A7ItemsNeera END
  END
  ACTION_IF ((MOD_IS_INSTALLED ~A7-ConvenientEENPCs.tp2~ 1) OR (MOD_IS_INSTALLED ~A7-ConvenientEENPCs.tp2~ 105)) BEGIN  // "Disable Rasaad"
    LAF A7ItemsRasaad END
  END


